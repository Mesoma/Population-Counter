#include <cs50.h>
#include <stdio.h>

int main(void)
{
    int x = get_int("first number: ");
    int y = get_int("second number: ");
    char o = get_char("Operator: ");
    int a;

    if (o == '+')
    {
        a = x + y;
    }
    else if (o == '-')
    {
        a = x - y;
    }
    else if (o == '*')
    {
        a = x * y;
    }
    else if (o == '/')
    {
        a = x / y;
    }
    else
    {
        a = 0;
        printf("Invalid Operator\n");
    }


    printf("%i\n", a);

}
